# https://github.com/jigish/slate/blob/master/README.md

config defaultToCurrentScreen true

bind q:alt,shift corner top-left resize:screenSizeX/2;screenSizeY/2
bind q:alt,ctrl,shift corner top-left resize:screenSizeX/2;screenSizeY/4
bind q:ctrl,shift corner top-left

bind e:alt,shift corner top-right resize:screenSizeX/2;screenSizeY/2
bind e:ctrl,alt,shift corner top-right resize:screenSizeX/2;screenSizeY/4
bind e:ctrl,shift corner top-right

bind z:alt,shift corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind z:alt,ctrl,shift corner bottom-left resize:screenSizeX/2;screenSizeY/4
bind z:ctrl,shift corner bottom-left

bind c:alt,shift corner bottom-right resize:screenSizeX/2;screenSizeY/2
bind c:alt,ctrl,shift corner bottom-right resize:screenSizeX/2;screenSizeY/4
bind c:ctrl,shift corner bottom-right

bind a:alt,shift corner top-left resize:screenSizeX/2;screenSizeY
bind d:alt,shift corner top-right resize:screenSizeX/2;screenSizeY
bind w:alt,shift corner top-left resize:screenSizeX;screenSizeY/2
bind x:alt,shift corner bottom-left resize:screenSizeX;screenSizeY/2

bind f:alt,shift corner top-left resize:screenSizeX;screenSizeY

bind a:ctrl,alt,shift resize +100% +0
bind w:ctrl,alt,shift resize +0 +100%

bind ]:cmd,shift throw prev
bind [:cmd,shift throw next

